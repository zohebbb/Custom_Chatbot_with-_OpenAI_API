import openai
import gradio

openai.api_key = "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"

messages = [{"role": "system", "content": "You are a fitness trainer"}]

def CustomChatGPT(user_input):
    messages.append({"role": "user", "content": user_input})
    response = openai.ChatCompletion.create(
        model = "gpt-3.5-turbo",
        messages = messages
    )
    ChatGPT_reply = response["choices"][0]["message"]["content"]
    messages.append({"role": "assistant", "content": ChatGPT_reply})
    return ChatGPT_reply

demo = gradio.Interface(fn=CustomChatGPT, inputs = "text", outputs = "text", title = "Your Personal Fitness Trainer ")

demo.launch(share=True)
